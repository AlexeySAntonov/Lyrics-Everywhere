<?xml version="1.0" encoding="utf-8"?>
<animated-rotate
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:pivotX="50%"
	android:pivotY="50%">

	<shape
		android:innerRadiusRatio="4"
		android:shape="ring"
		android:thicknessRatio="6.333"
		android:useLevel="false">
		<size
			android:width="18dip"
			android:height="18dip"/>

		<gradient
			android:centerColor="#88ef5350"
			android:centerY="0.50"
			android:endColor="#ccef5350"
			android:startColor="#00ef5350"
			android:type="sweep"
			android:useLevel="false"/>
	</shape>

</animated-rotate>